<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
		<property name="hibernate.connection.driver_class">oracle.jdbc.OracleDriver</property>
		<property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521:xe</property>
		<property name="hibernate.connection.username">app</property>
		<property name="hibernate.connection.password">app</property>
		<property name="hibernate.default_schema">app</property>
		<property name="hibernate.dialect">org.hibernate.dialect.OracleDialect</property>
        
        <mapping class="com.autoinput.hibernate.objects.Continent"></mapping>
        <mapping class="com.autoinput.hibernate.objects.Nation"></mapping>
        <mapping class="com.autoinput.hibernate.objects.Club"></mapping>
        <mapping class="com.autoinput.hibernate.objects.City"></mapping>
        <mapping class="com.autoinput.hibernate.objects.Stadium"></mapping>
        <mapping class="com.autoinput.hibernate.objects.Player"></mapping>
        <mapping class="com.autoinput.hibernate.objects.Competition"></mapping>
        <mapping class="com.autoinput.hibernate.objects.Agreement"></mapping>
    </session-factory>
</hibernate-configuration>